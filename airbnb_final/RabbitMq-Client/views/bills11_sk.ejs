            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            background-color:white;
        }

        button {
            background:none!important;
            border:none;
            padding:0!important;
            font: inherit;
            cursor: pointer;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .header {
            right:10px;
            position:absolute;
            z-index: 90;
        }


